{
  "name": "Agent Neo - Decentralized AI Agent",
  "short_name": "Agent Neo",
  "description": "A self-evolving, decentralized AI agent DApp with ethics-driven task processing and P2P network connectivity",
  "version": "1.0.0",
  "manifest_version": 1,
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1a1a2e",
  "background_color": "#0f0f1a",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["productivity", "utilities", "developer"],
  "icons": [
    {
      "src": "assets/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Agent Neo Dashboard View"
    },
    {
      "src": "assets/screenshots/mobile-1.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Agent Neo Mobile Interface"
    },
    {
      "src": "assets/screenshots/chat-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Agent Neo Chat Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View Agent Neo dashboard with system metrics",
      "url": "/?view=dashboard",
      "icons": [
        {
          "src": "assets/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Chat",
      "short_name": "Chat",
      "description": "Chat with Agent Neo AI assistant",
      "url": "/?view=chat",
      "icons": [
        {
          "src": "assets/icons/shortcut-chat.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "P2P Network",
      "short_name": "Network",
      "description": "View P2P network connections and status",
      "url": "/?view=network",
      "icons": [
        {
          "src": "assets/icons/shortcut-network.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Configure Agent Neo settings and preferences",
      "url": "/?settings=true",
      "icons": [
        {
          "src": "assets/icons/shortcut-settings.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/*", "image/*", ".pdf", ".json", ".txt", ".md"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+agentneo",
      "url": "/protocol-handler/?protocol=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://agent-neo.app/manifest.json"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },
  "file_handlers": [
    {
      "action": "/file-handler/",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/pdf": [".pdf"]
      }
    }
  ]
}